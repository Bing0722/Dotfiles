{
	"cmake": {
		"prefix": "cc",
		"body": [
			"cmake_minimum_required(VERSION 3.30)",
			"",
			"set(CMAKE_CXX_COMPILER clang++)",
			"set(CMAKE_C_COMPILER clang)",
			"",
			"project($1 VERSION 0.1 LANGUAGES CXX)",
			"",
			"set(CMAKE_CXX_STANDARD 11)",
			"set(CMAKE_CXX_STANDARD_REQUIRED true)",
			"set(CMAKE_EXPORT_COMPILE_COMMANDS ON)",
			"",
			"file(GLOB SOURCES \"*.cc\")",
			"",
			"add_executable(\\${PROJECT_NAME} \\${SOURCES})",
			"",
			"target_link_libraries(\\${PROJECT_NAME}$2)"
		],
		"desc": "cmake simple"
	},
	"cmake qt": {
		"prefix": "cqt",
		"body": [
			"cmake_minimum_required(VERSION 3.30)",
			"",
			"set(CMAKE_CXX_COMPILER clang++)",
			"set(CMAKE_C_COMPILER clang)",
			"",
			"project($1 VERSION 0.1 DESCRIPTION \"Qt App$2\" LANGUAGES CXX)",
			"",
			"set(CMAKE_CXX_STANDARD 17)",
			"set(CMAKE_CXX_STANDARD_REQUIRED true)",
			"set(CMAKE_AUTOMOC ON)",
			"set(CMAKE_EXPORT_COMPILE_COMMANDS ON)",
			"",
			"find_package(Qt6 REQUIRED COMPONENTS Core Widgets Gui$3)",
			"",
			"file(GLOB SOURCES \"*.cc\")",
			"",
			"set(RESOURCE_FILE \"\\${CMAKE_CURRENT_SOURCE_DIR}/resources.qrc\")",
			"",
			"if(EXISTS \\${RESOURCE_FILE})",
			"  message(STATUS \"Found resource file: \\${RESOURCE_FILE}\")",
			"  qt_add_resources(RESOURCES \\${RESOURCE_FILE})",
			"else()",
			"  message(WARNING \"resources.qrc not found, skipping resource setup.\")",
			"endif()",
			"",
			"add_executable(\\${PROJECT_NAME} \\${SOURCES})",
			"",
			"target_sources(\\${PROJECT_NAME} PRIVATE \\${RESOURCES})",
			"",
			"target_link_libraries(\\${PROJECT_NAME} PRIVATE Qt6::Core Qt6::Widgets Qt6::Gui$4)"
		],
		"desc": "qt cmake"
	}
}
